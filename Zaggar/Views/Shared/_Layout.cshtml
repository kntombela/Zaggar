@{
    ViewBag.AppName = "Zaggar";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- DataTables CSS -->
    <link href=@Url.Content("~/Content/DataTables/media/css/dataTables.bootstrap.css") rel="stylesheet" type="text/css" />




</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Zaggar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*Customers*@
                    <li class="dropdown">
                        <a href="@Url.Action("Index", "Customers")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Customers <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Create", "Customers")">Add Customer</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "Customers")">View All</a></li>
                            <li><a href="#">Edit</a></li>
                            <li><a href="#">Delete</a></li>
                        </ul>
                    </li>
                    @*Products*@
                    <li class="dropdown">
                        <a href="@Url.Action("Index", "Products")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Products <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Create", "Products")">Add Product</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "Products")">View All</a></li>
                            <li><a href="#">Edit</a></li>
                            <li><a href="#">Delete</a></li>
                        </ul>
                    </li>
                    @*Quotes*@
                    <li class="dropdown">
                        <a href="@Url.Action("Index", "Quotes")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Quotes <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Create", "Quotes")">Create New Quote</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "CustomerQuotes")">View All</a></li>
                            <li><a href="#">Edit</a></li>
                            <li><a href="#">Delete</a></li>
                        </ul>
                    </li>
                    @*Invoices*@
                    <li class="dropdown">
                        <a href="@Url.Action("Index", "Invoices")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Invoices <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Create", "Invoices")">Raise Invoice</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "Invoices")">View All</a></li>
                            <li><a href="#">Edit</a></li>
                            <li><a href="#">Delete</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @ViewBag.AppName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- DataTables JS -->
    <script src=@Url.Content("~/Scripts/DataTables/media/js/jquery.dataTables.min.js")></script>
    <script src=@Url.Content("~/Scripts/DataTables/media/js/dataTables.bootstrap.min.js")></script>

    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $('#quoteTable').dataTable();
        });
    </script> 

    @RenderSection("scripts", required: false)
</body>
</html>
