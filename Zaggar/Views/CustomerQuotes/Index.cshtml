@model IEnumerable<Zaggar.ViewModels.CustomerQuoteViewModel>
@{
    ViewBag.Title = "Customer Quotes";
}

<h2>Customer Quotes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Quote Date
        </th>
        <th>
            Expiry Date
        </th>
        <th>
            Total
        </th>
        <th>
            Quote Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quote.QuoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quote.ExpiryDate)
            </td>
            <td>
                @item.Total
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quote.QuoteStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Quotes", new { id = item.Quote.QuoteID }, null) |
                @Html.ActionLink("Details", "Details", "Quotes", new { id = item.Quote.QuoteID }, null) |
                @Html.ActionLink("Delete", "Delete", "Quotes", new { id = item.Quote.QuoteID }, null)
            </td>
        </tr>
    }

</table>

